<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:onClick="PaginaRegistro"
    tools:context=".Vista.Registro">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Registro"
        android:textColor="#F42534"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text=" AppUinsuranceP"
        android:textColor="#F42534"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="410dp"
            android:layout_gravity="center"
            android:background="#ffff"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/rutRegistro"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/forma_edit_text"
                android:hint="RUT "
                android:maxLength="11"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.395"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.543" />

            <EditText
                android:id="@+id/claveRegistro"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/forma_edit_text"
                android:hint="CLAVE"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.395"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.543" />

            <EditText
                android:id="@+id/nombresRegistro"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/forma_edit_text"
                android:hint="NOMBRES"
                android:textColor="#000000"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/apellidoPaternoRegistro"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/forma_edit_text"
                android:hint="APELLIDO PATERNO"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/apellidoMaternoRegistro"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/forma_edit_text"
                android:hint="APELLIDO MATERNO"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/emailRegistro"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/forma_edit_text"
                android:hint="E-MAIL"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/celularRegistro"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/forma_edit_text"
                android:hint="CELULAR"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <Button
                android:id="@+id/registarseRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#F42534"
                android:text="Registrarse"
                app:cornerRadius="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.366"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView"
                app:layout_constraintVertical_bias="0.548" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

