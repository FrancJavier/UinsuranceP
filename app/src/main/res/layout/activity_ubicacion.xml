<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Vista.Ubicacion">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Direcciones"
        android:textColor="#F42534"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text=" AppUinsuranceP"
        android:textColor="#F42534"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />



    <GridLayout
        android:layout_width="280dp"
        android:layout_height="330dp"
        android:layout_gravity="center"
        android:background="#ffff"
        android:columnCount="2"
        android:rowCount="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/Santiago"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ubicacion"
            android:onClick="openMapForSantiago"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SANTIAGO"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_margin="15dp"/>

        <ImageButton
            android:id="@+id/Ovalle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ubicacion"
            android:layout_marginBottom="15dp"
            android:onClick="openMapForOvalle"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OVALLE"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_margin="15dp"/>

        <ImageButton
            android:id="@+id/Coquimbo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ubicacion"
            android:layout_marginBottom="15dp"
            android:onClick="openMapForCoquimbo"/>

        <TextView
            android:id="@+id/textoEnImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COQUIMBO"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_margin="15dp"/>

        <ImageButton
            android:id="@+id/Serena"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ubicacion"
            android:layout_marginBottom="15dp"
            android:onClick="openMapForSerena"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LA SERENA"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_margin="15dp"/>








    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
